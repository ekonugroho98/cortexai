# CortexAI Environment Variables
# Copy this file to .env and fill in your values
# (Never commit .env to version control)

# ── Server ────────────────────────────────────────────────────────────────────
CORTEXAI_CONFIG=           # Path to JSON config file (optional, overrides below)
CORTEXAI_HOST=0.0.0.0
CORTEXAI_PORT=8000
CORTEXAI_ENV=development   # development | staging | production
CORTEXAI_LOG_LEVEL=info    # debug | info | warn | error

# ── Authentication ────────────────────────────────────────────────────────────
ENABLE_AUTH=true
CORTEXAI_API_KEYS=your-api-key-1,your-api-key-2   # comma-separated

# ── Rate Limiting ─────────────────────────────────────────────────────────────
RATE_LIMIT_PER_MINUTE=60

# ── BigQuery (required for BQ features) ──────────────────────────────────────
GCP_PROJECT_ID=your-gcp-project-id
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
# OR use Application Default Credentials (gcloud auth application-default login)

# ── Anthropic AI (required for /query-agent) ─────────────────────────────────
ANTHROPIC_API_KEY=sk-ant-your-key-here

# ── Elasticsearch (optional) ──────────────────────────────────────────────────
ELASTICSEARCH_ENABLED=false
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_SCHEME=http      # http | https
ELASTICSEARCH_USER=
ELASTICSEARCH_PASSWORD=

# ── Security ──────────────────────────────────────────────────────────────────
MAX_QUERY_BYTES_PROCESSED=10000000000   # 10GB default
